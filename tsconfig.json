{
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist", // Specify the output directory for compiled files
      "rootDir": "./src" // Specify the root directory of your TypeScript source files
    },
    "include": [
      "src/**/*.ts" // Specify the path to your TypeScript source files
    ],
    "exclude": [
      "node_modules"
    ]
  }
  